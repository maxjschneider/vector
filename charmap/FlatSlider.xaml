<UserControl x:Class="charmap.FlatSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:charmap"
             mc:Ignorable="d" Height="18.666" Width="158"
             MouseMove="Container_MouseMove" MouseLeave="UserControl_MouseLeave" MouseEnter="UserControl_MouseEnter">
    <Grid Margin="0,0,0,0">
        <Rectangle MouseLeftButtonDown="MouseLeftDown" MouseLeftButtonUp="MouseLeftUp" x:Name="Container" Fill="Black" HorizontalAlignment="Left" Height="12" Stroke="#FF323232" VerticalAlignment="Top" Width="155" Margin="0,3,0,0"/>
        <Rectangle MouseLeftButtonDown="MouseLeftDown" MouseLeftButtonUp="MouseLeftUp" x:Name="Slider" Fill="MediumVioletRed" HorizontalAlignment="Left" Height="12" Margin="0,3,0,0" Stroke="#FF323232" VerticalAlignment="Top" Width="84"/>

    </Grid>
</UserControl>
